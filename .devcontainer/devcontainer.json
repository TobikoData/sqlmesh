{
	"name": "SQLMesh",
	"build": {
		"dockerfile": "Dockerfile",
		"context": ".."
	},
	"features": {
		"ghcr.io/devcontainers/features/python:1": {
			"version": "3.10"
		},
		"ghcr.io/devcontainers/features/node:1": {
			"version": "20"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"esbenp.prettier-vscode"
			]
		}
	},
	"forwardPorts": [
		8000,
		8001
	]
}